<% if @places.blank? %>
<p>There are not any places currently in the system.</p>
<% else %>
<h1>Places I've Been</h1>

<ul id = "places">
   <% @places.each do |c| %>
   <li><%= link_to c.name, {:action => 'show', :id => c.name} -%></li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Place", {:action => 'new' }%></p>